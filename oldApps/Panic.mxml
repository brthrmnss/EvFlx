<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			    width="720" height="720" scaleX=".5" scaleY=".5"
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" 
			    backgroundColor="0"
			   minHeight="600" xmlns:panic="org.syncon.evernote.panic.*"
			   xmlns:view="org.syncon.evernote.panic.view.*">
	<!--width="720" height="1280"-->
	
	<fx:Style source="org/syncon/evernote/panic/view/assets/styles.css" />
	<fx:Declarations>
	 	<!--<panic:PanicContext id="context" contextView="{this}" />-->
		
	</fx:Declarations>
 
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
 
	
	<s:HGroup>
		<view:Graph width="{(this.width-12)/5}"  textBottom="transmit"  fillC="0xFCBF17" />
		<view:Graph width="{(this.width-12)/5}"   textBottom="coda"    fillC="0x47C816" />
		<view:Graph width="{(this.width-12)/5}"   textBottom="unison"   fillC="0xFF3D19" />
		<view:Graph width="{(this.width-12)/5}"   textBottom="unison"   fillC="0x7652C0" /> 
		<view:Graph width="{(this.width-12)/5}"   textBottom="unison"    fillC="0x1279FA" />	
	</s:HGroup>
	
	
	<view:ProjectList />
	
	<view:Message  width="100%"/>
	
	<s:HGroup id="holderPane">
		<view:Pane  width="{(this.width-12)/3}"  colorScheme="0" />
		<view:Pane width="{(this.width-12)/3}"   colorScheme="1" />
		<view:Pane  width="{(this.width-12)/3}"/>
	</s:HGroup>

 <view:TwitterScroller />
	
	
</s:Application>
