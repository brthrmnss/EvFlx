<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx"  
		  fontSize="20" height="40"
				autoDrawBackground="false">
	
	<fx:Script> 
		<![CDATA[ 
			import mx.collections.ArrayList;
			
			import org.syncon.evernote.panic.vo.PeopleVO;
			import org.syncon.evernote.panic.vo.ProjectVO;
			[Bindable] public var menu :   ProjectVO = new ProjectVO()
			override public function set data(value:Object):void { 
				super.data = value; 
				if (value== null)  return; 
				menu = value as ProjectVO
				var arr : ArrayList = new ArrayList( menu.ppl ) 
				this.list.dataProvider = arr
			} 
 
		]]> 
	</fx:Script> 	
	
	<s:states> 
		<s:State name="normal"/> 
		<s:State name="hovered"/> 
		<s:State name="disabled"/> 
	</s:states> 	
