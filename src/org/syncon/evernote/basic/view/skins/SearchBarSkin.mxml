<?xml version="1.0" encoding="utf-8"?>
<s:Skin
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:s="library://ns.adobe.com/flex/spark" >
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
		]]>
	</fx:Script>

	<fx:Metadata>
		[HostComponent("org.syncon.evernote.basic.view.search_bar")]
	</fx:Metadata>

	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />		
	</s:states>
	
	<!-- bg -->
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="8" radiusY="8">
		<s:fill>
			<s:SolidColor color="#B4CDD2" />
		</s:fill>
	</s:Rect>
 
	 
	<s:HGroup x="10" verticalCenter="0"  verticalAlign="middle">
		<s:Label id="lblShowing" text="Showing 897 notes in " />
		<s:DropDownList id="dropdownNotebooks" dataProvider="{new ArrayList(['All Notebooks'])}" />
	</s:HGroup>
	<s:Button right="10" enabled="false" label="Save Search"  id="btnSearch" verticalCenter="0" />
	
</s:Skin>
