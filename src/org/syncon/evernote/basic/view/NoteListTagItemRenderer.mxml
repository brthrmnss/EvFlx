<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						  xmlns:s="library://ns.adobe.com/flex/spark" 
						  xmlns:mx="library://ns.adobe.com/flex/mx"  
						  focusEnabled="true" xmlns:view="org.syncon.evernote.basic.view.*">

	<fx:Script>
		<![CDATA[
			import com.evernote.edam.type.Note;
			
			override public function set data(value:Object):void { 
				super.data = value; 
				if (value== null)  return; 
			 	this.adjustable.tagsArray = value.tagNames  
				this.adjustable.updateNote = value as Note; 
			}  			
		]]>
	</fx:Script>

 
	<view:TagListAdjustable id="adjustable" verticalCenter="0" horizontalCenter="0" />
	
</s:MXDataGridItemRenderer>
